{
    "name": "what-to-food",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:dev": "mprocs -c .mprocs/dev.yml",
        "start:prod": "node dist/src/main.js",
        "clean": "rimraf dist public/build build",
        "build": "run-s clean build-dirty",
        "build-dirty": "run-p nestjs:build remix:build",
        "nestjs:start": "nest start",
        "nestjs:dev": "nest start --watch",
        "nestjs:debug": "nest start --debug --watch",
        "nestjs:build": "nest build",
        "remix:dev": "remix dev",
        "remix:build": "remix build",
        "lint": "eslint \"{src,apps,libs,test,frontend}/**/*.{ts,tsx}\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.3",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.3",
        "@nestjs/mongoose": "^10.0.0",
        "@nestjs/platform-express": "^10.0.3",
        "@nestjs/serve-static": "^4.0.0",
        "@nestjs/terminus": "^10.0.1",
        "@remix-run/css-bundle": "^1.17.1",
        "@remix-run/node": "^1.17.1",
        "@remix-run/react": "^1.17.1",
        "@remix-run/serve": "^1.17.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "isbot": "^3.6.12",
        "mongoose": "^7.3.1",
        "postgres": "^3.3.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.3",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.0.3",
        "@remix-run/dev": "^1.17.1",
        "@remix-run/eslint-config": "^1.17.1",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.66",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.2",
        "@types/node": "20.3.1",
        "@types/react": "^18.2.13",
        "@types/react-dom": "^18.2.6",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0-alpha.138",
        "@typescript-eslint/parser": "^6.0.0-alpha.144",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "jest": "29.5.0",
        "mprocs": "^0.6.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "rimraf": "^5.0.1",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "tailwindcss": "^3.3.2",
        "ts-jest": "29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
